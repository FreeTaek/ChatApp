<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#228822</item>
        <item name="colorPrimaryDark">#33691E</item>
        <item name="colorAccent">#228822</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_width</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_height</item>
    </style>

    <style name="MyAppTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#228822</item>
        <item name="colorPrimaryDark">#33691E</item>
        <item name="colorAccent">#228822</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_width</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_height</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#228822</item>
        <item name="colorPrimaryDark">#33691E</item>
        <item name="colorAccent">#228822</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_width</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_height</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name = "android:windowBackground">@android:color/transparent</item>
        <item name = "android:background">@android:color/transparent</item>
    </style>

</resources>
